APP_NAME="Nuestro Diario de Ruta"
APP_ENV=production
APP_KEY=base64:TU_APP_KEY_GENERADA_CON_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://tu-dominio-backend.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos de producción
DB_CONNECTION=mysql
DB_HOST=tu_host_base_datos
DB_PORT=3306
DB_DATABASE=tu_nombre_base_datos
DB_USERNAME=tu_usuario_base_datos
DB_PASSWORD=tu_password_seguro

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuración de correo para producción
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="tu_email@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (opcional si decides usarlo)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Configuración de Sanctum para producción
SANCTUM_STATEFUL_DOMAINS=tu-dominio-frontend.com,www.tu-dominio-frontend.com

# URL del frontend (para CORS)
FRONTEND_URL=https://tu-dominio-frontend.com

# Emails de los dos usuarios permitidos
PARTNER1_EMAIL=mvinajera@gmail.com
PARTNER2_EMAIL=514dave.core@gmail.com

# Tamaño máximo de subida en KB (50MB)
MAX_UPLOAD_SIZE=51200

SESSION_SAME_SITE=lax

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret
CLOUDINARY_URL=cloudinary://tu_api_key:tu_api_secret@tu_cloud_name
